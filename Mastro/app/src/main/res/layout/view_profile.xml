<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".nav_Item.view_profile.ViewProfile">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/dataContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="85dp"
            android:orientation="vertical">

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/vProfilePic"
                android:layout_width="match_parent"
                android:background="#8000"
                android:layout_height="0dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical"
                android:padding="10dp"
                tools:ignore="RtlSymmetry">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/vPName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        tools:ignore="RelativeOverlap" />

                    <TextView
                        android:id="@+id/vPAge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="15sp"
                        android:textColor="@color/black"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        tools:ignore="RtlSymmetry" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    tools:ignore="UseCompoundDrawables">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_gender" />

                    <TextView
                        android:id="@+id/vPGender"
                        style="@style/textBelowName" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    tools:ignore="UseCompoundDrawables">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_education" />

                    <TextView
                        android:id="@+id/vPCollege"
                        style="@style/textBelowName" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    tools:ignore="UseCompoundDrawables">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_location"/>

                    <TextView
                        android:id="@+id/vPHowFar"
                        style="@style/textBelowName" />


                </LinearLayout>

            </LinearLayout>

            <LinearLayout style="@style/viewProfileBox">

                <TextView
                    style="@style/viewProfileTitle"
                    android:text="@string/bio" />

                <TextView
                    android:id="@+id/vPBio"
                    style="@style/viewProfileData"
                    android:gravity="center_horizontal" />
            </LinearLayout>

            <LinearLayout style="@style/viewProfileBox">

                <TextView
                    style="@style/viewProfileTitle"
                    android:text="@string/about" />

                <LinearLayout style="@style/viewProfileInnerBox">

                    <TextView
                        style="@style/viewProfileInnerTitle"
                        android:text="@string/height" />

                    <TextView
                        android:id="@+id/vPHeight"
                        style="@style/viewProfileData" />
                </LinearLayout>

                <LinearLayout style="@style/viewProfileInnerBox">

                    <TextView
                        style="@style/viewProfileInnerTitle"
                        android:text="@string/education" />

                    <TextView
                        android:id="@+id/vPEducation"
                        style="@style/viewProfileData" />
                </LinearLayout>

                <LinearLayout style="@style/viewProfileInnerBox">

                    <TextView
                        style="@style/viewProfileInnerTitle"
                        android:text="@string/income" />

                    <TextView
                        android:id="@+id/vPIncome"
                        style="@style/viewProfileData" />
                </LinearLayout>

                <LinearLayout style="@style/viewProfileInnerBox">

                    <TextView
                        style="@style/viewProfileInnerTitle"
                        android:text="@string/from" />

                    <TextView
                        android:id="@+id/vPFrom"
                        style="@style/viewProfileData" />
                </LinearLayout>

                <LinearLayout style="@style/viewProfileInnerBox">

                    <TextView
                        style="@style/viewProfileInnerTitle"
                        android:text="@string/job" />

                    <TextView
                        android:id="@+id/vPJob"
                        style="@style/viewProfileData" />
                </LinearLayout>

                <LinearLayout style="@style/viewProfileInnerBox">

                    <TextView
                        style="@style/viewProfileInnerTitle"
                        android:text="@string/motherTongue" />

                    <TextView
                        android:id="@+id/vPMotherTongue"
                        style="@style/viewProfileData" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout style="@style/viewProfileBox">

                <TextView
                    style="@style/viewProfileTitle"
                    android:text="@string/family" />

                <LinearLayout style="@style/viewProfileInnerBox">

                    <TextView
                        style="@style/viewProfileInnerTitle"
                        android:text="@string/religion" />

                    <TextView
                        android:id="@+id/vPReligion"
                        style="@style/viewProfileData" />
                </LinearLayout>

                <LinearLayout style="@style/viewProfileInnerBox">

                    <TextView
                        style="@style/viewProfileInnerTitle"
                        android:text="@string/family_type" />

                    <TextView
                        android:id="@+id/vPFamilyType"
                        style="@style/viewProfileData" />
                </LinearLayout>

                <LinearLayout style="@style/viewProfileInnerBox">

                    <TextView
                        style="@style/viewProfileInnerTitle"
                        android:text="@string/Family_Status" />

                    <TextView
                        android:id="@+id/vPFamilyStatus"
                        style="@style/viewProfileData" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout style="@style/viewProfileBox">

                <TextView
                    style="@style/viewProfileTitle"
                    android:text="@string/hobby_habit" />

                <LinearLayout
                    style="@style/viewProfileInnerBox"
                    android:orientation="vertical">

                    <TextView
                        style="@style/viewProfileInnerTitle"
                        android:layout_width="match_parent"
                        android:gravity="center_horizontal"
                        android:text="@string/i_am"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/vPCharacter"
                        style="@style/viewProfileData"
                        android:gravity="center_horizontal"

                        android:textSize="18sp" />
                </LinearLayout>

                <LinearLayout style="@style/viewProfileInnerBox">

                    <TextView
                        style="@style/viewProfileInnerTitle"
                        android:text="@string/drink" />

                    <TextView
                        android:id="@+id/vPDrink"
                        style="@style/viewProfileData" />
                </LinearLayout>

                <LinearLayout style="@style/viewProfileInnerBox">

                    <TextView
                        style="@style/viewProfileInnerTitle"
                        android:text="@string/smoke" />

                    <TextView
                        android:id="@+id/vPSmoke"
                        style="@style/viewProfileData" />
                </LinearLayout>

                <LinearLayout style="@style/viewProfileInnerBox">

                    <TextView
                        style="@style/viewProfileInnerTitle"
                        android:text="@string/travel" />

                    <TextView
                        android:id="@+id/vPTravel"
                        style="@style/viewProfileData" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout style="@style/viewProfileBox">

                <TextView
                    style="@style/viewProfileTitle"
                    android:text="@string/interest" />

                <LinearLayout style="@style/viewProfileInnerBox">

                    <TextView
                        style="@style/viewProfileInnerTitle"
                        android:text="@string/sport" />

                    <TextView
                        android:id="@+id/vPSport"
                        style="@style/viewProfileData" />
                </LinearLayout>

                <LinearLayout style="@style/viewProfileInnerBox">

                    <TextView
                        style="@style/viewProfileInnerTitle"
                        android:text="@string/Music_Genre" />

                    <TextView
                        android:id="@+id/vPMusic"
                        style="@style/viewProfileData" />
                </LinearLayout>

                <LinearLayout style="@style/viewProfileInnerBox">

                    <TextView
                        style="@style/viewProfileInnerTitle"
                        android:text="@string/food" />

                    <TextView
                        android:id="@+id/vPFood"
                        style="@style/viewProfileData" />
                </LinearLayout>

                <LinearLayout style="@style/viewProfileInnerBox">

                    <TextView
                        style="@style/viewProfileInnerTitle"
                        android:text="@string/movies" />

                    <TextView
                        android:id="@+id/vPMovies"
                        style="@style/viewProfileData" />
                </LinearLayout>

                <LinearLayout style="@style/viewProfileInnerBox">

                    <TextView
                        style="@style/viewProfileInnerTitle"
                        android:text="@string/series" />

                    <TextView
                        android:id="@+id/vPSeries"
                        style="@style/viewProfileData" />
                </LinearLayout>

                <LinearLayout style="@style/viewProfileInnerBox">

                    <TextView
                        style="@style/viewProfileInnerTitle"
                        android:text="@string/tvshow" />

                    <TextView
                        android:id="@+id/vPTVShow"
                        style="@style/viewProfileData" />
                </LinearLayout>

                <LinearLayout style="@style/viewProfileInnerBox">

                    <TextView
                        style="@style/viewProfileInnerTitle"
                        android:text="@string/color" />

                    <TextView
                        android:id="@+id/vPColor"
                        style="@style/viewProfileData" />
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <include layout="@layout/only_back"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/dislikeBtn"
            style="@style/circularbtn"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="50dp"
            android:padding="14dp"
            android:src="@drawable/ic_close" />

        <ImageView
            android:id="@+id/likeBtn"
            style="@style/circularbtn"
            android:layout_marginStart="50dp"
            android:layout_marginTop="10dp"
            android:padding="16dp"
            android:src="@drawable/ic_like"
            tools:ignore="RtlSymmetry" />
    </LinearLayout>


</RelativeLayout>